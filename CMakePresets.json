{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-release",
      "displayName": "Windows Release",
      "description": "Release build for Windows with vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg_installed/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-release",
      "displayName": "Build Windows Release",
      "configurePreset": "windows-release",
      "configuration": "Release"
    }
  ]
}
